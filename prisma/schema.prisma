// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Teacher {
  teacherId String @id @default(cuid())
  firstName String
  lastName String
  description String?
  Classroom Classroom[]
  createdAt  DateTime   @default(now())
}

model Classroom {
  classroomId String @id @default(cuid())
  classroomName String
  fccUserIds String[]
  description String?
  classroomTeacherId String
  Teacher Teacher @relation(fields: [classroomTeacherId], references: [teacherId])
  createdAt  DateTime   @default(now())
} 